@model List<QuickBank.Core.Application.ViewModels.Facilities.Benefice.BeneficeViewModel>

@{
    ViewData["Title"] = "Beneficiarios";
}

<h2>Beneficiarios</h2>

<div class="beneficiaries">
    <a asp-action="AddBeneficiary" class="btn btn-primary">Agregar Beneficiario</a>

    <div class="beneficiaries">
        @if (Model != null && Model.Count != 0)
        {
            <table class="table shadow mb-2 rounded-3">
                <thead class="thead-dark">
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Número de Cuenta</th>
                        <th>Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var beneficiary in Model)
                    {
                        <tr>
                            <td>@beneficiary.BenefitedFullName</td>
                            <td>@beneficiary.BenefitedSavingAccount?.AccountNumber</td>
                            <td>
                                <form method="post" asp-action="ConfirmDelete" asp-route-id="@beneficiary.Id">
                                    <button type="submit" class="btn btn-danger">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No tienes beneficiarios</p>
        }
    </div>
</div>
