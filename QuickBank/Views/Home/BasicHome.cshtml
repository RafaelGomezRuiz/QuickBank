@model QuickBank.Core.Application.ViewModels.Products.HomeBasicViewModel
@using QuickBank.Core.Application.Interfaces.Helpers
@inject IUserHelper userHelper

@{
    ViewData["Title"] = "Basic Home";
    var notificationFromRedirectioned = ViewBag.Notification as string;
    // Current user logged
    var user = userHelper.GetUser();
}

<h2>Bienvenido, @user.FirstName @user.LastName</h2>

<div class="products">
    
    @if (!string.IsNullOrEmpty(notificationFromRedirectioned))
    {
        <div class="alert alert-info">@notificationFromRedirectioned</div>
    }

    <h3>Tus Cuentas de Ahorro</h3>

    @if (Model.SavingAccounts != null && Model.SavingAccounts.Count != 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Número de Cuenta</th>
                    <th>Balance</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model.SavingAccounts)
                {
                    <tr>
                        <td>@account.AccountNumber</td>
                        <td>@account.Balance</td>
                        <td>@(account.Status == 1 ? "Activo" : "Inactivo")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No tienes cuentas de ahorro.</p>
    }
</div>

<h3>Tus Tarjetas de Crédito</h3>

@if (Model.CreditCards != null && Model.CreditCards.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Número de Tarjeta</th>
                <th>Balance</th>
                <th>Límite de Crédito</th>
                <th>Fecha de Expiración</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var card in Model.CreditCards)
            {
                <tr>
                    <td>@card.CardNumber</td>
                    <td>@card.Balance.ToString("C")</td>
                    <td>@card.LimitCredit.ToString("C")</td>
                    <td>@card.ExpirationDate.ToString("dd/MM/yyyy")</td>
                    <td>@(card.Status == 1 ? "Activo" : "Inactivo")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tienes tarjetas de crédito.</p>
}
 
<h3>Tus Préstamos</h3>

@if (Model.Loans != null && Model.Loans.Count != 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Número de Préstamo</th>
                <th>Monto</th>
                <th>Fecha de Vencimiento</th>
                <th>Tasa de Interés</th>
                <th>Descripción</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var loan in Model.Loans)
            {
                <tr>
                    <td>@loan.LoanNumber</td>
                    <td>@loan.Amount.ToString("C")</td>
                    <td>@loan.Deadline.ToString("dd/MM/yyyy")</td>
                    <td>@loan.InterestRate.ToString("P")</td>
                    <td>@loan.Description</td>
                    <td>@(loan.Status == 1 ? "Activo" : "Inactivo")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tienes préstamos.</p>
}
</div>
