@using QuickBank.Core.Application.ViewModels.Products;
@using QuickBank.Core.Application.ViewModels.User;
@using QuickBank.Core.Application.Enums;
@using QuickBank.Core.Application.Interfaces.Helpers;
@inject IUserHelper userHelper;
@model UserProductsViewModel
@{
    ViewData["Title"] = "UserAccounts Page";
    var userLoged = userHelper.GetUser();
}

<div class="container">
    <div class="row mb-3">
        <div class="row mb-3 mt-4 pe-0">
            <div class="d-flex gap-3 align-items-center pe-0">
                <div class="rounded-3 bg-primary p-0 flex-grow-1">
                    <h1 class="fw-bold text-light m-0 p-0 ms-4">User List</h1>
                </div>

                <a asp-controller="AdministrationUser" asp-route-ownerId="@Model.OwnerId" asp-action="SetSavingAccount" class="btn btn-lg btn-primary d-flex align-items-center gap-2">
                    <i class="bi bi-plus"></i>
                    <i class="bi bi-piggy-bank"></i>
                </a>
                
                <a asp-controller="AdministrationUser" asp-route-ownerId="@Model.OwnerId" asp-action="SetCreditCard" class="btn btn-lg btn-success d-flex align-items-center gap-2">
                    <i class="bi bi-plus"></i>
                    <i class="bi bi-credit-card"></i>
                </a>
                <a asp-controller="AdministrationUser" asp-route-ownerId="@Model.OwnerId" asp-action="SetLoan" class="btn btn-lg btn-warning d-flex align-items-center gap-2">
                    <i class="bi bi-plus"></i>
                    <i class="bi bi-bank"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Saving Accounts Section -->
    <div class="row mb-3">
        <div class="col-md-12">
            <h4>Saving Accounts (Total: @Model.SavingAccounts.Count)</h4>
            @if (Model.SavingAccounts.Count > 3)
            {
                <div id="savingAccountsCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="false">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.SavingAccounts.Count; i++)
                        {
                            var item = Model.SavingAccounts[i];
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="card card-custom shadow-sm bg-primary text-white">
                                    <div class="card-body card-body-custom">
                                        <h5 class="card-subtitle mb-2">Account Information:</h5>
                                        <p><strong>Account Number:</strong> @item.AccountNumber</p>
                                        <p><strong>Balance:</strong> @item.Balance</p>
                                        <p><strong>Status:</strong> @(item.Status == (int)EUserStatus.ACTIVE ? "Active" : "Inactive")</p>
                                        <p><strong>Principal Account:</strong> @(item.Principal ? "Yes" : "No")</p>
                                        <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="DeleteSavingAccount" class="btn btn-danger mt-2">Delete</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#savingAccountsCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#savingAccountsCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            }
            else
            {
                <div class="row">
                    @for (int i = 0; i < Model.SavingAccounts.Count; i++)
                    {
                        var item = Model.SavingAccounts[i];
                        <div class="col-md-4 mb-3">
                            <div class="card card-custom shadow-sm bg-primary text-white">
                                <div class="card-body card-body-custom">
                                    <h5 class="card-subtitle mb-2">Account Information:</h5>
                                    <p><strong>Account Number:</strong> @item.AccountNumber</p>
                                    <p><strong>Balance:</strong> @item.Balance</p>
                                    <p><strong>Status:</strong> @(item.Status == (int)EUserStatus.ACTIVE ? "Active" : "Inactive")</p>
                                    <p><strong>Principal Account:</strong> @(item.Principal ? "Yes" : "No")</p>
                                    <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="DeleteSavingAccount" class="btn btn-danger mt-2">Delete</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Credit Cards Section -->
    <div class="row mb-3">
        <div class="col-md-12">
            <h4>Credit Cards (Total: @Model.CreditCards.Count)</h4>
            @if (Model.CreditCards.Count > 3)
            {
                <div id="creditCardsCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="false">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.CreditCards.Count; i++)
                        {
                            var item = Model.CreditCards[i];
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="card card-custom shadow-sm bg-success text-white">
                                    <div class="card-body card-body-custom">
                                        <h5 class="card-subtitle mb-2">Credit Card Information:</h5>
                                        <p><strong>Card Number:</strong> @item.CardNumber</p>
                                        <p><strong>Credit Limit:</strong> @item.LimitCredit</p>
                                        <p><strong>Debt:</strong> @item.Balance</p>
                                        <p><strong>Status:</strong> @(item.Status == (int)EUserStatus.ACTIVE ? "Active" : "Inactive")</p>
                                        <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="DeleteCreditCard" class="btn btn-danger mt-2">Delete</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#creditCardsCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#creditCardsCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            }
            else
            {
                <div class="row">
                    @for (int i = 0; i < Model.CreditCards.Count; i++)
                    {
                        var item = Model.CreditCards[i];
                        <div class="col-md-4 mb-3">
                            <div class="card card-custom shadow-sm bg-success text-white">
                                <div class="card-body card-body-custom">
                                    <h5 class="card-subtitle mb-2">Credit Card Information:</h5>
                                    <p><strong>Card Number:</strong> @item.CardNumber</p>
                                    <p><strong>Credit Limit:</strong> @item.LimitCredit</p>
                                    <p><strong>Debt:</strong> @item.Balance</p>
                                    <p><strong>Status:</strong> @(item.Status == (int)EUserStatus.ACTIVE ? "Active" : "Inactive")</p>
                                    <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="DeleteCreditCard" class="btn btn-danger mt-2">Delete</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Loans Section -->
    <div class="row mb-3">
        <div class="col-md-12">
            <h4>Loans (Total: @Model.Loans.Count)</h4>
            @if (Model.Loans.Count > 3)
            {
                <div id="loansCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="false">
                    <div class="carousel-inner">
                        @for (int i = 0; i < Model.Loans.Count; i++)
                        {
                            var item = Model.Loans[i];
                            <div class="carousel-item @(i == 0 ? "active" : "")">
                                <div class="card card-custom shadow-sm bg-warning text-dark">
                                    <div class="card-body card-body-custom">
                                        <h5 class="card-subtitle mb-2">Loan Information:</h5>
                                        <p><strong>Loan Number:</strong> @item.LoanNumber</p>
                                        <p><strong>Amount:</strong> @item.Amount</p>
                                        <p><strong>Deadline:</strong> @item.Deadline</p>
                                        <p><strong>Description:</strong> @item.Description</p>
                                        <p><strong>Approval Date:</strong> @item.AprovalDate</p>
                                        <p><strong>Approved:</strong> @(item.Status == (int)EUserStatus.ACTIVE ? "Yes" : "No")</p>
                                        <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="DeleteLoan" class="btn btn-danger mt-2">Delete</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#loansCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#loansCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            }
            else
            {
                <div class="row">
                    @for (int i = 0; i < Model.Loans.Count; i++)
                    {
                        var item = Model.Loans[i];
                        <div class="col-md-4 mb-3">
                            <div class="card card-custom shadow-sm bg-warning text-dark">
                                <div class="card-body card-body-custom">
                                    <h5 class="card-subtitle mb-2">Loan Information:</h5>
                                    <p><strong>Loan Number:</strong> @item.LoanNumber</p>
                                    <p><strong>Amount:</strong> @item.Amount</p>
                                    <p><strong>Deadline:</strong> @item.Deadline</p>
                                    <p><strong>Description:</strong> @item.Description</p>
                                    <p><strong>Approval Date:</strong> @item.AprovalDate</p>
                                    <p><strong>Approved:</strong> @(item.Status == (int)EUserStatus.ACTIVE ? "Yes" : "No")</p>
                                    <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="DeleteLoan" class="btn btn-danger mt-2">Delete</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
}

<style>
    .carousel-item {
        min-height: 300px; /* Adjust the minimum height of carousel items */
    }

    .card-custom {
        height: 100%; /* Ensure the card takes up the full height of the carousel item */
        display: flex;
        flex-direction: column;
    }

    .card-body-custom {
        flex: 1; /* Allow the card body to take up available space */
    }
</style>
