@using QuickBank.Core.Application.ViewModels.Products;
@using QuickBank.Core.Application.ViewModels.User;
@using QuickBank.Core.Application.Enums;
@using QuickBank.Core.Application.Interfaces.Helpers;
@inject IUserHelper userHelper;

@model UserProductsViewModel
@{
    ViewData["Title"] = "UserAccounts Page";
    var userLoged = userHelper.GetUser();
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="AdministrationUser" asp-route-ownerId="@Model.OwnerId" asp-action="SetSavingAccount" class="btn btn-danger">Agregar cuenta ahorro</a>
            <a asp-controller="AdministrationUser" asp-route-ownerId="@Model.OwnerId" asp-action="SetLoan" class="btn btn-danger">Agregar prestamo</a>
            <a asp-controller="AdministrationUser" asp-route-ownerId="@Model.OwnerId" asp-action="SetCreditCard" class="btn btn-danger">Agregar tarjeta de credito</a>
        </div>
    </div>
    <div class="row">
        <div class="col-10 offset-1">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header bg-primary">
                            <h3 class="text-white">Listado de productos</h3>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <h3>SavingAccounts</h3>
                                @foreach (var item in Model.SavingAccounts)
                                {
                                    <div class="col-4 mb-3">
                                        <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="DeleteSavingAccount" class="btn btn-danger">Eliminar</a>
                                        <div class="card shadow-sm">
                                            <div class="container mt-4">
                                                <div class="card mt-4">
                                                    <div class="card-body">
                                                        <div class="mt-3">
                                                            <h5 class="card-subtitle mb-2">Account Information:</h5>
                                                            <p><strong>Account Number:</strong> @item.AccountNumber</p>
                                                            <p><strong>Balance:</strong> @item.Balance</p>
                                                            <p><strong>Status:</strong> @(item.Status == (int)EUserStatus.ACTIVE ? "Active" : "Inactive")</p>
                                                            <p><strong>Principal Account:</strong> @(item.Principal ? "Yes" : "No")</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                                <h3>Credict cards</h3>
                                @if (Model.CreditCards != null)
                                {
                                    @foreach (var item in Model.CreditCards)
                                    {
                                        <div class="col-4 mb-3">
                                            <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="DeleteCreditCard" class="btn btn-danger">Eliminar</a>

                                            <div class="card shadow-sm">
                                                <div class="container mt-4">
                                                    <div class="card mt-4">
                                                        <div class="card-body">
                                                            <div class="mt-3">
                                                                <h5 class="card-subtitle mb-2">credict card Information:</h5>
                                                                <p><strong>Account Number:</strong> @item.CardNumber</p>
                                                                <p><strong>Limite de credito:</strong> @item.LimitCredit</p>
                                                                <p><strong>Deuda:</strong> @item.Balance</p>

                                                                <p><strong>Status:</strong> @(item.Status == (int)EUserStatus.ACTIVE ? "Active" : "Inactive")</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p>No tienes tarjetas de credito</p>
                                }
                                <h3>Loans</h3>
                                @if (Model.Loans != null)
                                {
                                    @foreach (var item in Model.Loans)
                                    {
                                        <div class="col-4 mb-3">
                                            <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="DeleteLoan" class="btn btn-danger">Eliminar</a>
                                            <div class="card shadow-sm">
                                                <div class="container mt-4">
                                                    <div class="card mt-4">
                                                        <div class="card-body">
                                                            <div class="mt-3">
                                                                <h5 class="card-subtitle mb-2">Account Information:</h5>
                                                                <p><strong>Account Number:</strong> @item.LoanNumber</p>
                                                                <p><strong>Deuda:</strong> @item.Amount</p>
                                                                <p><strong>DeadLine:</strong> @item.Deadline</p>
                                                                <p><strong>AprovalDate:</strong> @item.AprovalDate</p>

                                                                <p><strong>Aprobado:</strong> @(item.Status == (int)EUserStatus.ACTIVE ? "Si" : "No")</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p>No tienes prestamos</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
