@using QuickBank.Core.Application.ViewModels.Products;

@model LoanSaveViewModel;

@{

}

<div class="row">
    <div class="col-6 offset-3">
        <div class="rounded-3 bg-primary p-1 mb-4">
            <h1 class="fw-bold text-light m-0 p-0 ms-4">Add Loan</h1>
        </div>
        <div class="card border-0">
            <div class="card-body">
                @Html.ValidationMessage("ArentAvailableLoans", "", new { @class = "text-danger" })

                <form asp-controller="AdministrationUser" asp-action="SetLoan">
                    <div class="mb-3">
                        <label asp-for="Amount" class="form-label">Amount: </label>
                        <input asp-for="Amount" class="form-control">
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description: </label>
                        <input asp-for="Description" class="form-control">
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="OwnerId"/>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-controller="AdministrationUser" asp-route-ownerId="@Model.OwnerId" asp-action="UserProducts" class="btn btn-warning">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: box-shadow 0.3s ease;
    }

    .card:hover {
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
</style>