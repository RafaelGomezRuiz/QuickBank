@using QuickBank.Core.Application.ViewModels.Products;
@using QuickBank.Core.Application.ViewModels.User;
@using QuickBank.Core.Application.Enums;
@using QuickBank.Core.Application.Interfaces.Helpers;
@inject IUserHelper userHelper;

@model List<UserViewModel>
@{
    ViewData["Title"] = "Users Page";
    var userLoged = userHelper.GetUser();
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="AdministrationUser" asp-action="Add" class="btn btn-danger">Agregar User</a>
        </div>
    </div>
    <div class="row">
        
        <div class="col-10 offset-1">
            <div class="row">

                @if (Model == null || Model.Count == 0)
                {
                    <h3>No hay Usuarios</h3>
                }
                else
                {
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header bg-primary">
                                <h3 class="text-white">Listado de usuarios</h3>
                            </div>
                            <div class="card-body">
                                @Html.ValidationMessage("ArentAvailableSavingsAccounts", "", new { @class = "text-danger" })
                                @Html.ValidationMessage("ArentAvailableLoans", "", new { @class = "text-danger" })
                                @Html.ValidationMessage("ArentAvailableCreditCards", "", new { @class = "text-danger" })

                                <div class="row">
                                    @foreach (var item in Model)
                                    {
                                        <div class="col-4 mb-3">
                                            <div class="card shadow-sm">
                                                <div class="container mt-4">
                                                    <div class="row justify-content-end">
                                                        @if (item.Id != userLoged.Id)
                                                        {
                                                            <div class="col-auto">
                                                                <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="ChangeUserState" class="btn @(item.Status ==(int)EUserStatus.ACTIVE ? "btn-danger":"btn-success") me-2">@(item.Status == (int)EUserStatus.ACTIVE ? "Inactivar" : "Activar")</a>
                                                                <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="Edit" class="btn btn-primary">Edit</a>
                                                                @if (item.Roles[0]==ERoles.BASIC.ToString())
                                                                {
                                                                    <a asp-controller="AdministrationUser" asp-route-ownerId="@item.Id" asp-action="UserProducts" class="btn btn-primary">Ver productos</a>
                                                                }

                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <p>No puedes editar tu cuenta</p>
                                                        }
                                                    </div>

                                                    <div class="card mt-4">
                                                        <div class="card-body">
                                                            <h3 class="card-title">@item.FirstName @item.LastName</h3>

                                                            <div class="mt-3">
                                                                <h5 class="card-subtitle mb-2">Roles:</h5>
                                                                @foreach (var role in item.Roles)
                                                                {
                                                                    <div class="d-inline-flex me-2 mb-2">
                                                                        <span class="badge @(item.Roles[0] ==ERoles.BASIC.ToString() ? "btn-warning":"btn-success")">@role</span>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
