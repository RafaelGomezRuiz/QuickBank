@using QuickBank.Core.Application.ViewModels.Products;
@using QuickBank.Core.Application.ViewModels.User;
@using QuickBank.Core.Application.Enums;
@using QuickBank.Core.Application.Interfaces.Helpers;
@inject IUserHelper userHelper;

@model List<UserViewModel>
@{
    ViewData["Title"] = "Users Page";
    var userLoged = userHelper.GetUser();
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="AdministrationUser" asp-action="Add" class="btn btn-danger">Agregar User</a>
        </div>
    </div>
    <div class="row">

        <div class="col-10 offset-1">
            <div class="row">

                @if (Model == null || Model.Count == 0)
                {
                    <h3>No hay Usuarios</h3>
                }
                else
                {
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header bg-primary">
                                <h3 class="text-white">Listado de usuarios</h3>
                            </div>
                            <div class="card-body">
                                @Html.ValidationMessage("ArentAvailableSavingsAccounts", "", new { @class = "text-danger" })
                                @Html.ValidationMessage("ArentAvailableLoans", "", new { @class = "text-danger" })
                                @Html.ValidationMessage("ArentAvailableCreditCards", "", new { @class = "text-danger" })

                                <table id="usersTable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Roles</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.FirstName @item.LastName</td>
                                                <td>
                                                    @foreach (var role in item.Roles)
                                                    {
                                                        <span class="badge @(item.Roles[0] == ERoles.BASIC.ToString() ? "badge-warning" : "badge-success")">@role</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (item.Id != userLoged.Id)
                                                    {
                                                        <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="ChangeUserState" class="btn @(item.Status ==(int)EUserStatus.ACTIVE ? "btn-danger" : "btn-success") me-2">
                                                            @(item.Status == (int)EUserStatus.ACTIVE ? "Inactivar" : "Activar")
                                                        </a>
                                                        <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="Edit" class="btn btn-primary">Edit</a>
                                                        @if (item.Roles[0] == ERoles.BASIC.ToString())
                                                        {
                                                            <a asp-controller="AdministrationUser" asp-route-ownerId="@item.Id" asp-action="UserProducts" class="btn btn-primary">Ver productos</a>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <p>No puedes editar tu cuenta</p>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@* Incluir las bibliotecas de DataTables y jQuery *@
@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#usersTable').DataTable();
        });
    </script>
}
