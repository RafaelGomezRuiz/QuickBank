@using QuickBank.Core.Application.ViewModels.Products;
@using QuickBank.Core.Application.ViewModels.User;
@using QuickBank.Core.Application.Enums;
@using QuickBank.Core.Application.Interfaces.Helpers;
@inject IUserHelper userHelper;

@model List<UserViewModel>
@{
    ViewData["Title"] = "Users Page";
    var userLoged = userHelper.GetUser();
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="AdministrationUser" asp-action="Add" class="btn btn-danger">Agregar User</a>
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-light">
                    <h3>Filtros</h3>
                </div>
                <div class="card-body">
                    <div class="card-title">
                        <h3 class="card-title"> Categorias</h3>
                        <form method="post" asp-controller="Home" asp-action="Index">
                            <div class="=mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" value="null" type="radio" name="CategoryId" id="category-all" />
                                    <label class="form-check-label" for="category-all">Todas</label>
                                </div>
                            </div>
                            @* @foreach (CategoryViewModel category in ViewBag.Categories)
                            {
                                <div class="=mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" value="@category.Id" type="radio" name="CategoryId" id="category-@category.Id" />
                                        <label class="form-check-label" for="category-@category.Id">@category.Name</label>
                                    </div>
                                </div>
                            } *@
                            <button type="submit" class="btn btn-primary">Filtrar</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-9">
            <div class="row">

                @if (Model == null || Model.Count == 0)
                {
                    <h3>No hay Usuarios</h3>
                }
                else
                {
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header bg-primary">
                                <h3 class="text-white">Listado de productos</h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @foreach (var item in Model)
                                    {
                                        <div class="col-4 mb-3">
                                            <div class="card shadow-sm">
                                                <div class="container mt-4">
                                                    <div class="row justify-content-end">
                                                        @if (item.Id != userLoged.Id)
                                                        {
                                                            <div class="col-auto">
                                                                <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="ChangeUserState" class="btn btn-danger me-2">@(item.Status == (int)EUserStatus.ACTIVE ? "Inactivar" : "Activar")</a>
                                                                <a asp-controller="AdministrationUser" asp-route-id="@item.Id" asp-action="Edit" class="btn btn-primary">Edit</a>
                                                            </div>
                                                        }
                                                    </div>

                                                    <div class="card mt-4">
                                                        <div class="card-body">
                                                            <h3 class="card-title">@item.FirstName @item.LastName</h3>

                                                            <div class="mt-3">
                                                                <h5 class="card-subtitle mb-2">Roles:</h5>
                                                                @foreach (var role in item.Roles)
                                                                {
                                                                    <div class="d-inline-flex me-2 mb-2">
                                                                        <span class="badge bg-secondary">@role</span>
                                                                    </div>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
