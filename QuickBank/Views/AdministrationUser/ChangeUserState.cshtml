@using QuickBank.Core.Application.ViewModels.User;
@using QuickBank.Core.Application.Enums;
@model UserSaveViewModel;


<div class="container-fluid">
    <div class="shadow col-6 offset-4 p-3">
        <h2 class="text-center fw-bold ">Estas seguro de @(Model.Status == (int)EUserStatus.ACTIVE ? "Inactivar" : "Activar")</h2>
        <h4 class="text-center fw-light"> A el usuario: @Model.FirstName @Model.LastName</h4>

        <div class="mt-3">
            <div class="input-group">
                <a asp-controller="AdministrationUser" asp-action="Index" class="btn btn-warning">cancel</a>
                <a asp-controller="AdministrationUser" asp-route-id="@Model.Id" asp-action="ChangeUserStatePost" class="btn btn-primary">confirm</a>
            </div>
        </div>
    </div>
</div>